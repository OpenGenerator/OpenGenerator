# {{projectName}} Environment Variables
# Generated by OpenGenerator
# Copy this file to .env and fill in your values

# ============================================
# Server
# ============================================
NODE_ENV=development
PORT={{port}}
HOST=localhost

# ============================================
# Database
# ============================================
{{#if postgres}}
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{snakeCase projectName}}
{{/if}}
{{#if mysql}}
DATABASE_URL=mysql://root:password@localhost:3306/{{snakeCase projectName}}
{{/if}}
{{#if mongodb}}
DATABASE_URL=mongodb://localhost:27017/{{snakeCase projectName}}
{{/if}}

{{#if redis}}
# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379
{{/if}}

{{#if auth}}
# ============================================
# Authentication
# ============================================
{{#if jwt}}
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN={{jwt.expiresIn}}
JWT_REFRESH_EXPIRES_IN={{jwt.refreshExpiresIn}}
{{/if}}

{{#if oauth}}
# OAuth Providers
{{#each oauthProviders}}
{{constantCase this}}_CLIENT_ID=
{{constantCase this}}_CLIENT_SECRET=
{{/each}}
OAUTH_CALLBACK_URL=http://localhost:{{../port}}/auth/callback
{{/if}}

{{#if magicLink}}
# Magic Link
MAGIC_LINK_SECRET=your-magic-link-secret
MAGIC_LINK_EXPIRES_IN=15m
{{/if}}
{{/if}}

{{#if email}}
# ============================================
# Email
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM={{projectName}} <noreply@example.com>
{{/if}}

{{#if storage}}
# ============================================
# File Storage
# ============================================
{{#if s3}}
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET={{kebabCase projectName}}-uploads
{{/if}}
{{#if cloudinary}}
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
{{/if}}
{{/if}}

# ============================================
# API
# ============================================
API_PREFIX={{apiPrefix}}
CORS_ORIGIN=*
{{#if rateLimit}}
RATE_LIMIT_MAX={{rateLimit.max}}
RATE_LIMIT_WINDOW_MS={{rateLimit.windowMs}}
{{/if}}

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
{{#if sentry}}
SENTRY_DSN=
{{/if}}

# ============================================
# Feature Flags
# ============================================
ENABLE_SWAGGER={{#if swagger}}true{{else}}false{{/if}}
ENABLE_GRAPHQL_PLAYGROUND={{#if graphql}}true{{else}}false{{/if}}
