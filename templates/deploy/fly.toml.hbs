# {{projectName}} Fly.io Configuration
# Generated by OpenGenerator

app = "{{kebabCase projectName}}"
primary_region = "{{region}}"

[build]
  dockerfile = "Dockerfile"

[env]
  NODE_ENV = "production"
  PORT = "{{port}}"

[http_service]
  internal_port = {{port}}
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = {{minMachines}}

  [http_service.concurrency]
    type = "requests"
    hard_limit = 250
    soft_limit = 200

[[services]]
  protocol = "tcp"
  internal_port = {{port}}

  [[services.ports]]
    port = 80
    handlers = ["http"]
    force_https = true

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

  [[services.tcp_checks]]
    interval = "15s"
    timeout = "2s"
    grace_period = "5s"

  [[services.http_checks]]
    interval = "10s"
    timeout = "2s"
    grace_period = "5s"
    method = "GET"
    path = "/health"
    protocol = "http"

[checks]
  [checks.health]
    port = {{port}}
    type = "http"
    interval = "15s"
    timeout = "2s"
    grace_period = "5s"
    method = "GET"
    path = "/health"

[[vm]]
  cpu_kind = "shared"
  cpus = {{cpus}}
  memory_mb = {{memory}}

{{#if postgres}}
[mounts]
  source = "{{kebabCase projectName}}_data"
  destination = "/data"
{{/if}}
