# {{projectName}} Docker Compose
# Generated by OpenGenerator

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{kebabCase projectName}}-app
    restart: unless-stopped
    ports:
      - "${PORT:-{{port}}}:{{port}}"
    environment:
      - NODE_ENV=production
      - PORT={{port}}
{{#if database}}
      - DATABASE_URL=${DATABASE_URL}
{{/if}}
{{#if redis}}
      - REDIS_URL=redis://redis:6379
{{/if}}
{{#if auth}}
      - JWT_SECRET=${JWT_SECRET}
{{/if}}
    depends_on:
{{#if postgres}}
      postgres:
        condition: service_healthy
{{/if}}
{{#if redis}}
      redis:
        condition: service_healthy
{{/if}}
    networks:
      - {{kebabCase projectName}}-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{port}}/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

{{#if postgres}}
  postgres:
    image: postgres:{{postgresVersion}}-alpine
    container_name: {{kebabCase projectName}}-postgres
    restart: unless-stopped
    environment:
      - POSTGRES_USER=${POSTGRES_USER:-postgres}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-postgres}
      - POSTGRES_DB=${POSTGRES_DB:-{{snakeCase projectName}}}
    volumes:
      - postgres-data:/var/lib/postgresql/data
    ports:
      - "${POSTGRES_PORT:-5432}:5432"
    networks:
      - {{kebabCase projectName}}-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-postgres}"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/if}}

{{#if redis}}
  redis:
    image: redis:{{redisVersion}}-alpine
    container_name: {{kebabCase projectName}}-redis
    restart: unless-stopped
    command: redis-server --appendonly yes
    volumes:
      - redis-data:/data
    ports:
      - "${REDIS_PORT:-6379}:6379"
    networks:
      - {{kebabCase projectName}}-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/if}}

{{#if nginx}}
  nginx:
    image: nginx:alpine
    container_name: {{kebabCase projectName}}-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
    depends_on:
      - app
    networks:
      - {{kebabCase projectName}}-network
{{/if}}

volumes:
{{#if postgres}}
  postgres-data:
{{/if}}
{{#if redis}}
  redis-data:
{{/if}}

networks:
  {{kebabCase projectName}}-network:
    driver: bridge
