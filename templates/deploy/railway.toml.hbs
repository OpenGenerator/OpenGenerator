# {{projectName}} Railway Configuration
# Generated by OpenGenerator

[build]
builder = "{{builder}}"
buildCommand = "{{#if usePnpm}}pnpm{{else}}npm run{{/if}} build"
{{#if prisma}}
postBuildCommand = "{{#if usePnpm}}pnpm{{else}}npx{{/if}} prisma generate && {{#if usePnpm}}pnpm{{else}}npx{{/if}} prisma migrate deploy"
{{/if}}

[deploy]
startCommand = "node dist/index.js"
healthcheckPath = "/health"
healthcheckTimeout = 300
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10

[env]
NODE_ENV = "production"
PORT = "{{port}}"
