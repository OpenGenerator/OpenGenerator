# {{projectName}} Kubernetes Configuration
# Generated by OpenGenerator

---
apiVersion: v1
kind: Namespace
metadata:
  name: {{namespace}}

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{kebabCase projectName}}-config
  namespace: {{namespace}}
data:
  NODE_ENV: "production"
  PORT: "{{port}}"
{{#each configMapData}}
  {{@key}}: "{{this}}"
{{/each}}

---
apiVersion: v1
kind: Secret
metadata:
  name: {{kebabCase projectName}}-secrets
  namespace: {{namespace}}
type: Opaque
stringData:
{{#each secrets}}
  {{@key}}: "{{this}}"
{{/each}}

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{kebabCase projectName}}
  namespace: {{namespace}}
  labels:
    app: {{kebabCase projectName}}
spec:
  replicas: {{replicas}}
  selector:
    matchLabels:
      app: {{kebabCase projectName}}
  template:
    metadata:
      labels:
        app: {{kebabCase projectName}}
    spec:
      containers:
        - name: {{kebabCase projectName}}
          image: {{image}}:{{imageTag}}
          ports:
            - containerPort: {{port}}
          envFrom:
            - configMapRef:
                name: {{kebabCase projectName}}-config
            - secretRef:
                name: {{kebabCase projectName}}-secrets
          resources:
            requests:
              memory: "{{memoryRequest}}"
              cpu: "{{cpuRequest}}"
            limits:
              memory: "{{memoryLimit}}"
              cpu: "{{cpuLimit}}"
          livenessProbe:
            httpGet:
              path: /health
              port: {{port}}
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /health
              port: {{port}}
            initialDelaySeconds: 5
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
      {{#if imagePullSecrets}}
      imagePullSecrets:
        - name: {{imagePullSecrets}}
      {{/if}}

---
apiVersion: v1
kind: Service
metadata:
  name: {{kebabCase projectName}}-service
  namespace: {{namespace}}
spec:
  selector:
    app: {{kebabCase projectName}}
  ports:
    - protocol: TCP
      port: 80
      targetPort: {{port}}
  type: ClusterIP

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{kebabCase projectName}}-ingress
  namespace: {{namespace}}
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
{{#if annotations}}
{{#each annotations}}
    {{@key}}: "{{this}}"
{{/each}}
{{/if}}
spec:
  tls:
    - hosts:
        - {{host}}
      secretName: {{kebabCase projectName}}-tls
  rules:
    - host: {{host}}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{kebabCase projectName}}-service
                port:
                  number: 80

{{#if hpa}}
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: {{kebabCase projectName}}-hpa
  namespace: {{namespace}}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{kebabCase projectName}}
  minReplicas: {{hpa.minReplicas}}
  maxReplicas: {{hpa.maxReplicas}}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{hpa.cpuUtilization}}
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: {{hpa.memoryUtilization}}
{{/if}}
