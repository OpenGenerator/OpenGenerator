{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BasicCrudAPI",
  "description": "A simple CRUD API schema for demonstration",
  "type": "object",
  "definitions": {
    "User": {
      "type": "object",
      "description": "User model for authentication and identification",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "User's full name"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user", "guest"],
          "default": "user",
          "description": "User's role in the system"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the user was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the user was last updated"
        }
      },
      "required": ["id", "email", "name"]
    },
    "Post": {
      "type": "object",
      "description": "Blog post model",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Post title"
        },
        "content": {
          "type": "string",
          "description": "Post content in markdown or HTML"
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "URL-friendly slug"
        },
        "published": {
          "type": "boolean",
          "default": false,
          "description": "Whether the post is published"
        },
        "authorId": {
          "type": "string",
          "format": "uuid",
          "description": "Reference to the author (User)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorization"
        },
        "viewCount": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Number of views"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "title", "authorId"]
    },
    "Comment": {
      "type": "object",
      "description": "Comment on a post",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "content": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Comment content"
        },
        "authorId": {
          "type": "string",
          "format": "uuid",
          "description": "Reference to the commenter (User)"
        },
        "postId": {
          "type": "string",
          "format": "uuid",
          "description": "Reference to the post"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "content", "authorId", "postId"]
    }
  }
}
