{
  "name": "@opengenerator/cli",
  "version": "1.0.0",
  "description": "Command-line interface for OpenGenerator",
  "author": "Ersin KOC",
  "license": "MIT",
  "type": "module",
  "bin": {
    "opengenerator": "./dist/index.js",
    "og": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@opengenerator/core": "workspace:*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "figures": "^6.0.0",
    "boxen": "^7.1.0",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.11.0",
    "@types/update-notifier": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "keywords": [
    "cli",
    "code-generator",
    "api-generator",
    "opengenerator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/opengenerator/opengenerator.git",
    "directory": "packages/cli"
  },
  "homepage": "https://opengenerator.dev",
  "bugs": "https://github.com/opengenerator/opengenerator/issues"
}
